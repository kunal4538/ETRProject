<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/approveCard">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#f7f7f8"
        app:cardUseCompatPadding="true"
        android:clipToPadding="false"
        android:clipChildren="true"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="false"
        app:cardCornerRadius="8dp"
       >


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:layout_marginLeft="9dp"
           android:layout_marginRight="9dp"
           >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="3"
               android:layout_marginLeft="5dp"
               android:layout_marginRight="5dp"
               >

               <TextView
                   android:textColor="@color/black"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="A639190"
                   android:id="@+id/corp_id"
                   android:layout_weight="1"
                   android:layout_marginBottom="5dp"
                   android:gravity="center_horizontal"
                   android:layout_marginTop="5dp"
                   />
               <View

                   android:layout_width="1dp"
                   android:layout_height="match_parent"
                   android:background="@color/lines"
                  />
               <TextView
                   android:textColor="@color/black"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="123456"
                   android:id="@+id/travel_id"
                   android:layout_weight="1"
                   android:layout_marginBottom="5dp"
                   android:gravity="center_horizontal"
                   android:layout_marginTop="5dp"/>
               <View
                   android:textColor="@color/black"
                   android:layout_width="1dp"
                   android:layout_height="match_parent"
                   android:background="@color/lines"
                   android:layout_marginTop="5dp"/>
               <TextView

                   android:textColor="#000000"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="Pending"
                   android:id="@+id/Status_id"
                   android:layout_weight="1"
                   android:layout_marginBottom="5dp"
                   android:gravity="center_horizontal"
                   android:layout_marginTop="5dp"/>


           </LinearLayout>

           <View

               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/lines"
               android:id="@+id/line"

           />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="9dp"
               android:orientation="vertical"
               >

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:weightSum="10"
                  >

                  <TextView
                      android:textColor="@color/black"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:textStyle="bold"
                      android:layout_weight="3"
                        android:text="Name:"
                      android:gravity="center_vertical"
                     />
                  <TextView

                      android:textColor="@color/black"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:text="Kunal Aggarwal"
                      android:id="@+id/name_id"
                      android:layout_weight="6"
                      />

              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:weightSum="10"
                   >

                  <TextView
                      android:textColor="@color/black"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="3"
                      android:text="Location:"
                      android:textStyle="bold"
                      android:gravity="center_vertical"

                       />
                   <TextView

                       android:textColor="@color/black"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:text="London"
                       android:id="@+id/location_id"


                       android:layout_weight="6"
                       />

               </LinearLayout>
              <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                  android:weightSum="10"
                   >

                   <TextView
                       android:textColor="@color/black"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:text="Duration:"
                       android:textStyle="bold"
                       android:layout_weight="3"
                       android:gravity="center_vertical"
                       />
                  <RelativeLayout
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="7">
                       <TextView
                           android:textColor="@color/black"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="02/02/2019"
                           android:id="@+id/startDate_id"

                           />
                      <TextView
                          android:textStyle="bold"
                          android:textColor="@color/black"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="to"
                          android:layout_toRightOf="@+id/startDate_id"
                          android:gravity="center"
                          android:id="@+id/to"
                          android:layout_marginRight="10dp"
                          android:layout_marginLeft="10dp"
                          />
                      <TextView
                          android:textColor="@color/black"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="2/4/2019"
                          android:id="@+id/endDate_id"
                          android:layout_marginLeft="8dp"
                          android:layout_toRightOf="@+id/to"
                          />
                  </RelativeLayout>


              </LinearLayout>
              <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                  android:layout_marginBottom="5dp"
                   android:weightSum="10"
                   >

                   <TextView
                       android:textColor="@color/black"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:text="Reason:"
                       android:layout_weight="3"
                       android:textStyle="bold"
                       android:gravity="center_vertical"
                       android:layout_gravity="center_vertical"
                       />
                   <TextView

                       android:textColor="@color/black"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:text="Business trip. meetings with clients. locking the deals. "
                       android:id="@+id/reason_id"
                       android:layout_marginRight="10dp"
                       android:layout_weight="7"
                       android:gravity="top"
                       />

               </LinearLayout>


           </LinearLayout>

           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/lines"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="3"
               android:layout_marginLeft="5dp"
               android:layout_marginRight="5dp"
               >

               <TextView

                   android:shadowColor="#d3000000"
                   android:layout_marginLeft="10dp"
                   android:drawableLeft="@drawable/ic_check_black_24dp"
                   android:drawableTint="@color/acceptBtn"
                   android:textColor="@color/acceptBtn"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="Accept"
                   android:id="@+id/acceptBtn_id"
                   android:layout_weight="1"
                   android:layout_marginTop="5dp"
                   android:gravity="center"
                   android:shadowDx="1"
                   android:shadowDy="1"
                   android:shadowRadius="2"

                   android:layout_marginBottom="5dp"/>
               <View
                   android:layout_width="1dp"
                   android:layout_height="match_parent"
                   android:background="@color/lines"
                  />
               <TextView

                   android:shadowColor="#d3000000"
                   android:shadowDx="1"
                   android:shadowDy="1"
                   android:shadowRadius="2"
                   android:layout_marginLeft="10dp"
                   android:drawableLeft="@drawable/ic_delete_black_24dp"
                   android:drawableTint="@color/rejectBtn"
                   android:textColor="@color/rejectBtn"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="Reject"
                   android:id="@+id/rejectBtn_id"
                   android:layout_weight="1"
                   android:gravity="center_horizontal"
                   android:layout_marginTop="5dp"
                   android:layout_marginBottom="5dp"
                   />
               <View
                   android:layout_width="1dp"
                   android:layout_height="match_parent"
                   android:background="@color/lines"
                   />
               <TextView
                   android:shadowColor="#d3000000"
                   android:shadowRadius="2"
                   android:layout_marginLeft="10dp"
                   android:drawableLeft="@drawable/ic_import_contacts_black_24dp"
                   android:drawableTint="@color/colorPrimary"
                   android:textColor="@color/colorPrimary"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="Details"
                   android:id="@+id/detailBtn_id"
                   android:layout_weight="1"
                   android:gravity="center"
                   android:layout_marginTop="5dp"
                   android:layout_marginBottom="5dp"
                   />

           </LinearLayout>






       </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>